{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}